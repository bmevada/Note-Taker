const router = require ('expresss').Router();
const store = require ('../db/store');

// GET notes from database
router.get('/notes', (reg, res) => {
    store
    .getNotes()
    .then((notes) => {
        return res.json(notes);
    })
    .catch((err) => res.status(500).json(err));

});

